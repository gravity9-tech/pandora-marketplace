{
  "name": "pandora-marketplace",
  "owner": {
    "name": "Pandora Team"
  },
  "metadata": {
    "description": "Pandora Marketplace - Collection of Claude Code plugins, agents, commands, and skills for comprehensive development workflows and integrations",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "ctx",
      "source": "./plugins/core/ctx",
      "description": "Unified context toolkit for Claude Code. Includes scan commands for analyzing codebase architecture, tech stack, coding guidelines, and glossaries. Includes sync commands for team context distribution and synchronization.",
      "version": "1.0.0",
      "author": {
        "name": "Pandora Team"
      },
      "homepage": "https://github.com/gravity9-tech/pandora-marketplace",
      "repository": "https://github.com/gravity9-tech/pandora-marketplace",
      "category": "core",
      "keywords": ["context", "architecture", "documentation", "codebase", "team", "distribution", "templates"],
      "commands": [
        "./commands/scan/all.md",
        "./commands/scan/architecture.md",
        "./commands/scan/coding-guidelines.md",
        "./commands/scan/glossary.md",
        "./commands/scan/tech-stack.md",
        "./commands/sync/init.md",
        "./commands/sync/pull.md",
        "./commands/sync/list.md",
        "./commands/sync/update.md",
        "./commands/sync/delete.md"
      ]
    },
    {
      "name": "deepwiki",
      "source": "./plugins/core/deepwiki",
      "description": "Comprehensive documentation generation system for codebases. Analyzes your codebase structure and generates evidence-backed, well-organized markdown documentation with ASCII diagrams and automatic cross-references.",
      "version": "1.0.0",
      "author": {
        "name": "Pandora Team"
      },
      "homepage": "https://github.com/gravity9-tech/pandora-marketplace",
      "repository": "https://github.com/gravity9-tech/pandora-marketplace",
      "category": "core",
      "keywords": ["documentation", "wiki", "code-analysis", "diagrams"],
      "commands": [
        "./commands/init.md",
        "./commands/sync.md"
      ],
      "agents": [
        "./agents/deepwiki-planner.md",
        "./agents/deepwiki-doc-generator.md",
        "./agents/deepwiki-skill-generator.md"
      ],
      "skills": [
        "./skills/codebase-analysis-patterns",
        "./skills/doc-generator-output-templates",
        "./skills/documentation-quality-checklist",
        "./skills/documentation-structure-patterns",
        "./skills/evidence-citation",
        "./skills/generating-ascii-diagrams",
        "./skills/planner-output-templates"
      ]
    },
    {
      "name": "safeguard",
      "source": "./plugins/core/safeguard",
      "description": "Defense-in-depth protection system for Claude Code. Blocks dangerous commands and protects sensitive files via PreToolUse hooks. Provides command pattern blocking, path protection levels, and ask patterns for confirmation dialogs.",
      "version": "1.0.0",
      "author": {
        "name": "Pandora Team"
      },
      "homepage": "https://github.com/gravity9-tech/pandora-marketplace",
      "repository": "https://github.com/gravity9-tech/pandora-marketplace",
      "category": "core",
      "keywords": ["security", "protection", "safety", "hooks"],
      "commands": [
        "./commands/install.md"
      ],
      "skills": [
        "./skills/damage-control"
      ]
    },
    {
      "name": "launchdarkly",
      "source": "./plugins/integrations/launchdarkly",
      "description": "Integration with LaunchDarkly feature flag management system for managing feature flags directly from Claude Code.",
      "version": "1.0.0",
      "author": {
        "name": "Pandora Team"
      },
      "homepage": "https://github.com/gravity9-tech/pandora-marketplace",
      "repository": "https://github.com/gravity9-tech/pandora-marketplace",
      "category": "integrations",
      "keywords": ["feature-flags", "launchdarkly", "integration"],
      "commands": [
        "./commands/add-feature-flag.md",
        "./commands/remove-feature-flag.md"
      ]
    }
  ]
}
